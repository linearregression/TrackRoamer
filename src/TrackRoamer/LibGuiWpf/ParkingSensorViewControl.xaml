                  >
            <Path.Fill>
                <SolidColorBrush Color="Green" />
            </Path.Fill>
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                    <RotateTransform CenterX="0" CenterY="0" />
                    <TranslateTransform X="50" Y="00" />
                </TransformGroup>
            </Path.RenderTransform>
